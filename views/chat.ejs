<%- include('partials/header') %>
<div class="chat">
    <div class="chat__sidebar" id="sidebar">
    </div>
    <div class="chat__main">
        <div id="messages" class="chat__messages"></div>
        <div class="compose">
            <form id="message-form">
                <input type="text" name="message" placeholder="Message">
                <button type="submit">send</button>
            </form>
            <button id="sendLocation">Send Location</button>
        </div>
    </div>
</div>
<scrpt id="message-template" type="text/html" hidden>
    <div class="message">
        <p style="margin-bottom: 0px;">
            <span class="message__name">{{username}}</span>
            <span class="message__meta">{{createdAt}}</span>
        </p>
        <p style="margin-top: 0px;">{{message}}</p>
    </div>
</scrpt>
<script id="location-template" type="text/html" hidden>
    <div class="message">
        <p style="margin-bottom: 0px;">
            <span class="message__name">{{username}}</span>
            <span class="message_meta">{{createdAt}}</span>
        </p>
        <p style="margin-top: 0px;"><a href={{location}} target="_blank">Know My Location</a></p>
        
    </div>
</script>
<script id="sidebar-template" type="text/html" hidden>
    <h2 class="room-title">{{room}}</h2>
    <h3 class="list-title">Users</h3>
    <ul class="users">
        {{#users}}
            <li style="margin-top: 10px">{{username}}</li>
        {{/users}}
    </ul>
</script>
<%- include('partials/footer') %> 